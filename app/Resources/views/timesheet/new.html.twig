{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-12">
            <form method="post">

                <div class="form-group">

                    {{ form_label(form.time) }}
                    {{ form_widget(form.time, {'attr': {'class': 'text'}}) }}

                </div>

                <div class="form-group">

                    {{ form_label(form.type) }}
                    {{ form_widget(form.type, {'attr': {'class': ''}}) }}

                </div>

                <div class="form-group ">

                    {{ form_label(form.sheeets) }}
                    {{ form_widget(form.sheeets, {'attr': {'class': ''}}) }}

                </div>

                <div class="form-group ">
                    {{ form_label(form.startDatetime) }}
                    {{ form_widget(form.startDatetime, {'attr': {'class': 'datepicker'}}) }}
                </div>

                <div class="form-group ">
                    {{ form_label(form.endDatetime) }}
                    {{ form_widget(form.endDatetime, {'attr': {'class': 'datepicker'}}) }}
                </div>


                <input type="submit" value="Ajouter" />
                   {{ form_end(form) }}
{% endblock %}
